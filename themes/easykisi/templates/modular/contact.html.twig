<div id="contact">
    <div class="container h-100">
        <div class="row h-100">
            <div class="col-sm-12 col-md-12 col-lg-12 col-xl-12 bg-light text-md-left text-center text-dark align-self-center bg-transparent p-4">
                <form>
                    <div class="form-group">
                        <label for="name">Dein Name</label>
                        <input id="name" type="text" class="form-control mb-4" placeholder="Name">
                    </div>
                    <div class="form-group">
                        <label for="email">Deine Email</label>
                        <input id="email" type="email" class="form-control mb-4" placeholder="Email">
                    </div>
                    <div class="form-group">
                        <label for="textarea">Deine Nachricht</label>
                        <textarea class="form-control mb-4" id="textarea" rows="4"></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary">Abschicken</button>
                </form>
            </div>
        </div>
    </div>
</div>